<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Krypto Info</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="mb-5">
      <nav
        class="navbar navbar-expand-lg bg-dark text-light"
        data-bs-theme="dark"
      >
        <div class="container">
          <a class="navbar-brand" href="#"
            ><img
              style="max-width: 40px"
              src="imgs/logo.png"
              class="p-1"
              alt=""
            />
            Krypto Info</a
          >
        </div>
      </nav>
    </div>
    <main class="container">
      <form
        method="post"
        action="/"
        class="mb-5 text-center"
        autocomplete="off"
      >
        <label for="exampleDataList" class="form-label"
          >Search for your favourite crypto(s) and get the latest info
          below.</label
        >
        <input
          class="form-control"
          list="datalistOptions"
          id="exampleDataList"
          name="crypto"
          placeholder="Type to search..."
        />
        <datalist id="datalistOptions">
          <% results.forEach((result) => { %>
          <option value=" <%= result  %>"></option>
          <% })%>
        </datalist>
        <input type="submit" class="btn btn-dark mt-3" />
      </form>

      <% if (locals.name){ %>

      <div class="card mb-3 text-bg-light text-center">
        <div class="text-bg-dark">
          <img
            src="<%= logo %>"
            class="card-img-top text-center p-5"
            alt="<%=name %>"
            style="max-width: 18rem"
          />
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= name %>(<%= symbol %>)</h5>
          <p class="card-text"><%= description %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Price (in USD): <%= price %></li>
          <li class="list-group-item">Market cap (in USD): <%= marketCap %></li>
          <li class="list-group-item">Rank: <%= rank %></li>
          <li class="list-group-item">Total Supply: <%= totalSupply %></li>
          <li class="list-group-item">Maximum supply: <%= maxSupply %></li>
        </ul>
        <div class="card-footer text-body-secondary">
          Launched: <%= launched %>
        </div>
      </div>
      <% } %>
    </main>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
